{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": [
          "./node_modules/@types"
      ],
      "types": [
          "node"  // ให้รวมประเภทของ Node.js
      ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
